---
import { posts } from '../lib/posts.json'; // Aseg√∫rate de que la ruta sea correcta
const latestPosts = Object.values(posts);  // Convierte los objetos a un array
---

<section>
  <ul class="space-y-4">
    {latestPosts.map((post, index) => (
      <li class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-all">
        <a href={`/blog/${post.slug}`} class="text-xl font-semibold text-blue-500 hover:text-blue-700">
          {post.title}
        </a>
        <p class="mt-2 text-gray-600">{post.content.substring(0, 150)}...</p>
      </li>
    ))}
  </ul>
</section>
